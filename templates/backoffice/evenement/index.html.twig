{% extends 'backoffice/base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Evenement index</h1>

        <style>
            .table {
                border-collapse: separate;
                border-spacing: 0 15px;
            }
            .table th {
                background-color: #343a40;
                color: white;
                text-align: center;
            }
            .table td {
                background-color: #f8f9fa;
                text-align: center;
                vertical-align: middle;
            }
            .btn {
                margin: 0 5px;
            }
            .container {
                padding: 20px;
                background-color: #ffffff;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            h1 {
                color: #343a40;
                margin-bottom: 20px;
            }
        </style>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Type public</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for evenement in evenements %}
                    <tr>
                        <td>{{ evenement.id }}</td>
                        <td>{{ evenement.nom }}</td>
                        <td>{{ evenement.description|slice(0, 50) }}...</td>
                        <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i') : '' }}</td>
                        <td>{{ evenement.lieu }}</td>
                        <td>{{ evenement.typePublic }}</td>
                        <td>{{ evenement.statut }}</td>
                        <td>
                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun enregistrement trouv√©</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        
    </div>
{% endblock %}