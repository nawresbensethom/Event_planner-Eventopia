{% extends 'backoffice/base.html.twig' %}

{% block title %}Créer une Tâche{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="card shadow">
    <div class="card-header bg-success text-white">
      <h2 class="h4 mb-0">Nouvelle Tâche</h2>
    </div>
    <div class="card-body bg-light">
      {{ include('backoffice/tache/_form.html.twig', {
          form: form,
          button_label: 'Créer'
      }) }}
    </div>
    <div class="card-footer bg-light text-end">
      <a href="{{ path('backoffice_tache_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i>Annuler
      </a>
    </div>
  </div>
</div>
{% endblock %}
