{% extends 'backoffice/base.html.twig' %}

{% block title %}Modifier le code promo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-gradient-primary {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
        }
        .form-card {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.35rem;
        }
        .form-control {
            border: 1px solid #e3e6f0;
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
        }
        .form-control:focus {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
        .btn {
            transition: all 0.2s ease;
        }
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-ticket-alt text-primary mr-2"></i>
                Modifier le code promo
            </h1>
        </div>

        <!-- Edit Form -->
        <div class="card shadow mb-4 form-card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.code, 'Code promo') }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.code) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.reductionType, 'Type de réduction') }}
                                {{ form_widget(form.reductionType, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.reductionType) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.dateDebut, 'Date de début') }}
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateDebut) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.dateExpiration, 'Date d\'expiration') }}
                                {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateExpiration) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.limiteUtilisation, 'Limite d\'utilisation') }}
                        {{ form_widget(form.limiteUtilisation, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.limiteUtilisation) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.service, 'Service associé') }}
                        {{ form_widget(form.service, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.service) }}
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_backoffice_code_promos_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary bg-gradient-primary">
                            <i class="fas fa-save mr-2"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Initialize date pickers
            $('input[type="date"]').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
{% endblock %}