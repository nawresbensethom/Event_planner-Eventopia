<!doctype html>
<html lang="en">
  <!--begin::Head-->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.5.0/styles/overlayscrollbars.min.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="{{ asset('css/backoffice.css') }}">

    {% block stylesheets %}{% endblock %}
  </head>
  <!--end::Head-->
  <!--begin::Body-->
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="{{ path('admin_dashboard') }}" class="nav-link">Home</a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Contact</a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <!-- Messages Dropdown Menu -->
          <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <i class="far fa-comments"></i>
              <span class="badge badge-danger navbar-badge">3</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <a href="#" class="dropdown-item">
                <!-- Message Start -->
                <div class="media">
                  {% if app.user and app.user.profil and app.user.profil.photo %}
                    <img src="{{ asset('uploads/photos/' ~ app.user.profil.photo) }}" 
                         alt="User Avatar" 
                         class="img-size-50 mr-3 img-circle"
                         onerror="this.src='{{ asset('assets/BackOffice/img/default-profile.png') }}'">
                  {% else %}
                    <img src="{{ asset('assets/BackOffice/img/default-profile.png') }}" 
                         alt="User Avatar" 
                         class="img-size-50 mr-3 img-circle">
                  {% endif %}
                  <div class="media-body">
                    <h3 class="dropdown-item-title">
                      Brad Diesel
                      <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                    </h3>
                    <p class="text-sm">Call me whenever you can...</p>
                    <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 4 Hours Ago</p>
                  </div>
                </div>
                <!-- Message End -->
              </a>
              <div class="dropdown-divider"></div>
              <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
            </div>
          </li>

          <!-- Notifications Dropdown Menu -->
          <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <i class="far fa-bell"></i>
              <span class="badge badge-warning navbar-badge">15</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <span class="dropdown-item dropdown-header">15 Notifications</span>
              <div class="dropdown-divider"></div>
              <a href="#" class="dropdown-item">
                <i class="fas fa-envelope mr-2"></i> 4 new messages
                <span class="float-right text-muted text-sm">3 mins</span>
              </a>
              <div class="dropdown-divider"></div>
              <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
            </div>
          </li>

          <!-- User Dropdown Menu -->
          <li class="nav-item dropdown user-menu">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              {% if app.user and app.user.profil and app.user.profil.photo %}
                <img src="{{ asset('uploads/photos/' ~ app.user.profil.photo) }}" 
                     class="user-image img-circle elevation-2" 
                     alt="User Image"
                     onerror="this.src='{{ asset('assets/BackOffice/img/default-profile.png') }}'">
              {% else %}
                <img src="{{ asset('assets/BackOffice/img/default-profile.png') }}" 
                     class="user-image img-circle elevation-2" 
                     alt="User Image">
              {% endif %}
              <span class="d-none d-md-inline">{{ app.user.nom ?? 'User' }}</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <!-- User image -->
              <li class="user-header bg-primary">
                {% if app.user and app.user.profil and app.user.profil.photo %}
                  <img src="{{ asset('uploads/photos/' ~ app.user.profil.photo) }}" 
                       class="img-circle elevation-2" 
                       alt="User Image"
                       onerror="this.src='{{ asset('assets/BackOffice/img/default-profile.png') }}'">
                {% else %}
                  <img src="{{ asset('assets/BackOffice/img/default-profile.png') }}" 
                       class="img-circle elevation-2" 
                       alt="User Image">
                {% endif %}
                <p>
                  {{ app.user.nom ?? 'User' }}
                  <small>Member since {{ app.user.date_inscription|date('M. Y') }}</small>
                </p>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <a href="{{ path('app_profil_show') }}" class="btn btn-default btn-flat">Profile</a>
                <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat float-right">Sign out</a>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('admin_backoffice_dashboard') }}" class="brand-link">
          <img src="{{ asset('assets/img/loogo.png') }}" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
          <span class="brand-text font-weight-light">EvenTopia</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <!--begin::Sidebar Menu-->
            <ul
              class="nav sidebar-menu flex-column"
              data-lte-toggle="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item menu-open">
                <a href="{{ path('app_dashboard') }}" class="nav-link active">
                  <i class="nav-icon bi bi-speedometer2"></i>
                  <p>
                    Dashboard
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="{{ path('admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                  <i class="nav-icon bi bi-people-fill"></i>
                  <p>Utilisateurs</p>
                </a>
              </li>
              <li class="nav-item">
              <a href="{{ path('app_evenement_index_back') }}" class="nav-link">
                <i class="nav-icon bi bi-calendar-event"></i>
                <p>Événements</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="{{ path('backoffice_plan_index') }}" class="nav-link">
                <i class="nav-icon bi bi-calendar4-week"></i>
                <p>Plans</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="{{ path('backoffice_tache_index') }}" class="nav-link">
                <i class="nav-icon bi bi-list-check"></i>
                <p>Tâches</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="{{ path('app_reservation_index_back') }}" class="nav-link">
                <i class="nav-icon bi bi-ticket-perforated"></i>
                <p>Réservations</p>
              </a>
            </li>

               <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="nav-icon bi bi-gift"></i>
                  <p>
                    Gestion des Services
                    <i class="nav-arrow bi bi-chevron-right"></i>
                  </p>
                </a>
              <ul class="nav nav-treeview">
    <li class="nav-item">
        <a href="{{ path('app_backoffice_categorieservice_index') }}" class="nav-link">
            <i class="nav-icon bi bi-circle"></i>
            <p>Catégories Services</p>
        </a>
    </li>
    <li class="nav-item">
        <a href="{{ path('app_backoffice_service_index') }}" class="nav-link">
            <i class="nav-icon bi bi-circle"></i>
            <p>Services</p>
        </a>
    </li>
    <li class="nav-item">
        <a href="{{ path('app_backoffice_code_promos_index') }}" class="nav-link">
            <i class="nav-icon bi bi-circle"></i>
            <p>Codes Promos</p>
        </a>
    </li>
  
</ul>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="nav-icon bi bi-newspaper"></i>
                  <p>
                    Blog
                    <i class="nav-arrow bi bi-chevron-right"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
        <a href="{{ path('admin_blog_index') }}" class="nav-link">
            <i class="nav-icon bi bi-circle"></i>
            <p>Gestion des Posts</p>
        </a>
    </li>
    <li class="nav-item">
        <a href="{{ path('app_backoffice_signalement_post_index') }}" class="nav-link">
            <i class="nav-icon bi bi-circle"></i>
            <p>Signalements</p>
        </a>
    </li>
    <li class="nav-item">
        <a href="{{ path('admin_blog_stats') }}" class="nav-link"> {# Utilisez le nom de la route #}
        <i class="nav-icon bi bi-bar-chart-line"></i>
        <p>Statistiques</p>
    </a>
    </li>
                </ul>
              </li>
              <li class="nav-item">
                <a href="{{ path('client_offre_emploi_dashboard') }}" class="nav-link">
                  <i class="nav-icon bi bi-briefcase-fill"></i>
                  <p>Offre de travail</p>
                </a>

              </li>
              <li class="nav-item">
                <a href="{{ path('client_candidature_dashboard') }}" class="nav-link">
                  <i class="nav-icon bi bi-briefcase-fill"></i>
                  <p>Candidatures</p>
                </a>
                
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        {% block body %}{% endblock %}
      </div>
      <!-- /.content-wrapper -->

      <footer class="main-footer">
        <strong>Copyright &copy; 2024 <a href="#">EvenTopia</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
          <b>Version</b> 1.0.0
        </div>
      </footer>
    </div>
    <!--end::App Wrapper-->
    <!--begin::Script-->
    <!--begin::Third Party Plugin(OverlayScrollbars)-->
    <script
      src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js"
      integrity="sha256-dghWARbRe2eLlIJ56wNB+b760ywulqK3DzZYEpsg2fQ="
      crossorigin="anonymous"
    ></script>
    
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <!-- local AdminLTE -->
    <script src="{{ asset('js/adminlte.js') }}"></script>
    <!-- overlayScrollbars -->
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.5.0/browser/overlayscrollbars.browser.es6.min.js"></script>
 
    <script>
      // Initialize dropdown toggles with jQuery
      $(document).ready(function() {
        $('.dropdown-toggle').dropdown();
        
        // Fix for user profile dropdown
        $('.user-menu').on('click', function(e) {
          $(this).toggleClass('show');
          $(this).find('.dropdown-menu').toggleClass('show');
        });
      });
    </script>

    {% block javascripts %}{% endblock %}
  </body>
  <!--end::Body-->
</html>
