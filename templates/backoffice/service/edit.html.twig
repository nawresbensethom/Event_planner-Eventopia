{% extends 'backoffice/base.html.twig' %}

{% block title %}Modifier le service{% endblock %}

{% block stylesheets %}
    {{ parent() }}
     <style>
        .bg-gradient-primary {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
        }
        .bg-gradient-success {
            background: linear-gradient(87deg, #2dce89 0, #2dcecc 100%) !important;
        }
        .form-card {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .header-bg {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border-bottom: 1px solid #e3e6f0;
        }
        .form-control:focus {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
         .search-container {
            margin-bottom: 1.5rem;
            padding: 0.5rem;
        }
        .search-input-group {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
        }
        .search-input {
            flex: 1;
            padding: 0.5rem 0.75rem;
            border: 1px solid #e3e6f0;
            border-radius: 0.35rem;
            font-size: 0.9rem;
        }
        .search-button {
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 0.35rem;
            font-weight: 500;
            transition: all 0.2s;
            font-size: 0.9rem;
        }
        .form-card {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .header-bg {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border-bottom: 1px solid #e3e6f0;
        }
        .form-control:focus {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
        .custom-file-input:focus ~ .custom-file-label {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
    </style>
  
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 header-bg p-3 rounded">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-edit text-primary mr-2"></i>
                Modifier le service
            </h1>
            <a href="{{ path('app_backoffice_service_index') }}" class="btn btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
        </div>

        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="card form-card mb-4">
                    <div class="card-header py-3 bg-gradient-primary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-edit mr-2"></i>
                            Formulaire de modification
                        </h6>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="form-group">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-tag text-primary mr-2"></i>Nom du service
                                </label>
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Entrez le nom du service'
                                    }
                                }) }}
                                <small class="form-text text-muted">Choisissez un nom clair et descriptif pour votre service</small>
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="form-group mt-4">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-folder text-primary mr-2"></i>Catégorie
                                </label>
                                {{ form_widget(form.categorieService, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                                <small class="form-text text-muted">Sélectionnez la catégorie qui correspond le mieux à votre service</small>
                                {{ form_errors(form.categorieService) }}
                            </div>

                            <div class="form-group mt-4">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-align-left text-primary mr-2"></i>Description
                                </label>
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Décrivez votre service en détail',
                                        'rows': 5
                                    }
                                }) }}
                                <small class="form-text text-muted">Fournissez une description détaillée de votre service</small>
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="form-group mt-4">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-dollar-sign text-primary mr-2"></i>Tarif
                                </label>
                                <div class="input-group">
                                    {{ form_widget(form.tarif, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Entrez le tarif du service'
                                        }
                                    }) }}
                                    <div class="input-group-append">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>
                                <small class="form-text text-muted">Indiquez le tarif de votre service en euros</small>
                                {{ form_errors(form.tarif) }}
                            </div>

                            <div class="form-group mt-4">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-image text-primary mr-2"></i>Photo du service
                                </label>
                                <div class="custom-file">
                                    {{ form_widget(form.photos, {
                                        'attr': {
                                            'class': 'custom-file-input shadow-sm',
                                            'accept': 'image/*',
                                            'data-browse': 'Parcourir'
                                        }
                                    }) }}
                                    <label class="custom-file-label text-muted" for="service_photos">
                                        <i class="fas fa-upload mr-2"></i>Sélectionner une image...
                                    </label>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        Formats acceptés : JPG, PNG, GIF - Max 5MB
                                    </small>
                                </div>
                                {{ form_errors(form.photos) }}
                            </div>

                            <div class="form-group mt-4">
                                <label class="form-label font-weight-bold text-gray-800">
                                    <i class="fas fa-user text-primary mr-2"></i>Prestataire
                                </label>
                                {{ form_widget(form.utilisateur, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                                <small class="form-text text-muted">Sélectionnez le prestataire qui fournira ce service</small>
                                {{ form_errors(form.utilisateur) }}
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <button type="submit" class="btn btn-primary bg-gradient-primary">
                                    <i class="fas fa-save mr-2"></i>Enregistrer les modifications
                                </button>
                                <a href="{{ path('app_backoffice_service_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-times mr-2"></i>Annuler
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
 <div class="col-xl-4">
                <div class="card detail-card mb-4">
                    <div class="card-header py-3 bg-gradient-info text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-chart-bar mr-2"></i>
                            Informations
                        </h6>
                    </div>
            
                    <div class="card-body">
                        <h4 class="small font-weight-bold">Conseils de modification</h4>
                        <div class="mb-3">
                            <i class="fas fa-check text-success mr-2"></i>
                            Modifiez uniquement les informations nécessaires
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-check text-success mr-2"></i>
                            Vérifiez la cohérence des données
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-check text-success mr-2"></i>
                            Assurez-vous que les photos sont de bonne qualité
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-check text-success mr-2"></i>
                            Vérifiez que le tarif est à jour
                        </div>
                        <hr>
                        <div class="text-center">
                            <i class="fas fa-lightbulb text-warning fa-2x mb-3"></i>
                            <p class="small text-muted">
                                Les modifications seront appliquées immédiatement.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.querySelector('.custom-file-input').addEventListener('change', function(e) {
            var fileName = e.target.files[0].name;
            var nextSibling = e.target.nextElementSibling;
            nextSibling.innerHTML = '<i class="fas fa-file-image mr-2"></i>' + fileName;
        });
    </script>
{% endblock %} 