{% extends 'backoffice/base.html.twig' %}

{% block title %}Nouveau service{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-gradient-primary {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
        }
        .bg-gradient-success {
            background: linear-gradient(87deg, #2dce89 0, #2dcecc 100%) !important;
        }
        .bg-gradient-info {
            background: linear-gradient(87deg, #11cdef 0, #1171ef 100%) !important;
        }
        .form-card {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .header-bg {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border-bottom: 1px solid #e3e6f0;
        }
        .form-control:focus {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
        .custom-file-input:focus ~ .custom-file-label {
            border-color: #5e72e4;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 header-bg p-3 rounded">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-plus text-primary mr-2"></i>
                Nouveau service
            </h1>
            <a href="{{ path('app_backoffice_service_index') }}" class="btn btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
        </div>

        <div class="row">
            <div class="col-xl-8">
                <div class="card form-card mb-4">
                    <div class="card-header py-3 bg-gradient-primary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-plus-circle mr-2"></i>
                            Formulaire de création
                        </h6>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom du service', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.tarif, 'Tarif', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.tarif, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.categorieService, 'Catégorie', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.categorieService, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.photos, 'Photo', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.photos, {'attr': {'class': 'form-control-file'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary bg-gradient-primary">
                            <i class="fas fa-save mr-2"></i> Créer le service
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card form-card mb-4">
                    <div class="card-header py-3 bg-gradient-info text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-info-circle mr-2"></i>
                            Informations
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>
                            Remplissez tous les champs obligatoires pour créer un nouveau service.
                        </div>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            L'image doit être au format JPG, PNG ou GIF.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Preview image before upload
        document.getElementById('service_photos').addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(e.target.files[0]);
            }
        });
    </script>
{% endblock %} 