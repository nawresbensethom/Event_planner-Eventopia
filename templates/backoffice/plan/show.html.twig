{% extends 'backoffice/base.html.twig' %}

{% block title %}Détails du Plan – {{ plan.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">{{ plan.titre }}</h2>
            <span class="badge bg-{{ plan.priorite == 'haute' ? 'danger' : (plan.priorite == 'moyenne' ? 'warning' : 'secondary') }}">
                {{ plan.priorite|capitalize }}
            </span>
        </div>
        <div class="card-body bg-light">
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item"><strong>Début :</strong> {{ plan.dateDebut|date('d/m/Y') }}</li>
                <li class="list-group-item"><strong>Fin :</strong> {{ plan.dateFin|date('d/m/Y') }}</li>
                <li class="list-group-item"><strong>Lieu :</strong> {{ plan.location }}</li>
            </ul>
            <h5>Description</h5>
            <p>{{ plan.description }}</p>
        </div>
        <div class="card-footer bg-light text-end">
            <a href="{{ path('backoffice_plan_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i>Retour
            </a>
            <a href="{{ path('backoffice_plan_edit', {id:plan.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}
