{% extends 'backoffice/base.html.twig' %}

{% block title %}Modifier le Plan – {{ plan.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="card shadow">
    <div class="card-header bg-warning text-dark">
      <h2 class="h4 mb-0">Modifier Plan</h2>
    </div>
    <div class="card-body bg-light">
      {{ include('backoffice/plan/_form.html.twig', {
          plan: plan,
          button_label: 'Mettre à jour'
      }) }}
    </div>
    <div class="card-footer bg-light text-end">
      <a href="{{ path('backoffice_plan_show', {id:plan.id}) }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i>Annuler
      </a>
    </div>
  </div>
</div>
{% endblock %}
