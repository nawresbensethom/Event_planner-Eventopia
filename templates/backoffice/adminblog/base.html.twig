{% extends 'backoffice/base.html.twig' %}

{% block title %}Admin Blog - EvenTopia{% endblock %}

{% block body %}
    <div class="app-content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <h3 class="mb-0">{% block page_title %}Admin Blog{% endblock %}</h3>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('admin_blog_index') }}">Posts</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{% block breadcrumb %}Admin Blog{% endblock %}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    
    <div class="app-content">
        <div class="container-fluid">
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %} 