{% extends 'backoffice/base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-gradient-primary {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
        }
        .bg-gradient-success {
            background: linear-gradient(87deg, #2dce89 0, #2dcecc 100%) !important;
        }
        .bg-gradient-info {
            background: linear-gradient(87deg, #11cdef 0, #1171ef 100%) !important;
        }
        .detail-card {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .header-bg {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border-bottom: 1px solid #e3e6f0;
        }
        .service-card {
            transition: transform 0.2s;
        }
        .service-card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 header-bg p-3 rounded">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-info-circle text-primary mr-2"></i>
                Détails de la catégorie
            </h1>
            <div>
                <a href="{{ path('app_backoffice_categorieservice_edit', {'id': categorieservice.id}) }}" class="btn btn-primary bg-gradient-primary shadow-sm">
                    <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
                </a>
                <a href="{{ path('app_backoffice_categorieservice_index') }}" class="btn btn-secondary shadow-sm">
                    <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="card detail-card mb-4">
                    <div class="card-header py-3 bg-gradient-primary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-info-circle mr-2"></i>
                            Informations de la catégorie
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h6 class="font-weight-bold text-primary">ID de la catégorie</h6>
                                    <p class="text-gray-800">{{ categorieservice.id }}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h6 class="font-weight-bold text-primary">Nom de la catégorie</h6>
                                    <p class="text-gray-800">{{ categorieservice.nomCategorie }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

               
                    
                </div>
            </div>

            
        </div>
    </div>
{% endblock %} 