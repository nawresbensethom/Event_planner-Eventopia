                  </svg>
            <a href="{{ path('app_backoffice_service_index') }}" class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
              Gérer les services <i class="bi bi-link-45deg"></i>
                  </a>
                </div>
              </div>

        <!-- Signalements Card -->
              <div class="col-lg-3 col-6">
                <div class="small-box text-bg-warning">
                  <div class="inner">
              <h3>{{ signalements|length }}</h3>
              <p>Signalements</p>
                  </div>
            <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"></path>
                  </svg>
            <a href="{{ path('app_backoffice_signalement_post_index') }}" class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
              Gérer les signalements <i class="bi bi-link-45deg"></i>
                  </a>
                </div>
              </div>

        <!-- Codes Promos Card -->
              <div class="col-lg-3 col-6">
          <div class="small-box text-bg-info">
                  <div class="inner">
              <h3>{{ code_promos|length }}</h3>
              <p>Codes Promos</p>
            </div>
            <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
