{% extends 'backoffice/base.html.twig' %}

{% block title %}Dashboard - EvenTopia{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .chart-container {
            position: relative;
            height: 300px;
            margin-bottom: 1rem;
        }
        .card-chart {
            background: linear-gradient(87deg, #fff 0, #f8f9fc 100%);
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .small-box {
            border-radius: 0.5rem;
            position: relative;
            display: block;
            margin-bottom: 20px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .small-box > .inner {
            padding: 1.5rem;
        }
        .small-box h3 {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0 0 10px 0;
            white-space: nowrap;
            padding: 0;
            color: #fff;
        }
        .small-box p {
            font-size: 1rem;
            color: #fff;
        }
        .small-box .icon {
            color: rgba(255, 255, 255, 0.3);
            z-index: 0;
            position: absolute;
            right: 0;
            top: 0;
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .small-box .icon svg {
            width: 40px;
            height: 40px;
        }
        .small-box-footer {
            position: relative;
            text-align: center;
            padding: 0.75rem;
            color: rgba(255,255,255,0.8);
            display: block;
            z-index: 10;
            background: rgba(0,0,0,0.1);
            text-decoration: none;
            border-radius: 0 0 0.5rem 0.5rem;
        }
        .small-box-footer:hover {
            color: #fff;
            background: rgba(0,0,0,0.15);
        }
        .bg-gradient-purple {
            background: linear-gradient(87deg, #8965e0 0, #bc65e0 100%) !important;
        }
        .bg-gradient-blue {
            background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
        }
        .bg-gradient-orange {
            background: linear-gradient(87deg, #fb6340 0, #fbb140 100%) !important;
        }
        .bg-gradient-teal {
            background: linear-gradient(87deg, #11cdef 0, #1171ef 100%) !important;
        }
    </style>
{% endblock %}

