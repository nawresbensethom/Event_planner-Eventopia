            <!-- Statistiques des Codes Promos -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card card-chart">
                        <div class="card-header">
                            <h5 class="card-title">Statut des Codes Promos</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="codePromosStatusChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Données pour le graphique de statut
            const validCodes = {{ code_promos|filter(c => c.dateExpiration > date())|length }};
            const expiredCodes = {{ code_promos|filter(c => c.dateExpiration <= date())|length }};

            // Graphique de statut (Doughnut)
            const statusCtx = document.getElementById('codePromosStatusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Codes Valides', 'Codes Expirés'],
                    datasets: [{
                        data: [validCodes, expiredCodes],
                        backgroundColor: [
                            'rgba(45, 206, 137, 0.8)',
                            'rgba(245, 54, 92, 0.8)'
                        ],
                        borderColor: [
                            'rgba(45, 206, 137, 1)',
                            'rgba(245, 54, 92, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}