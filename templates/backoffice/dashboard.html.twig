                  </svg>
            <a href="{{ path('admin_blog_index') }}" class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
              Gérer les posts <i class="bi bi-link-45deg"></i>
                  </a>
                </div>
              </div>

        <!-- Services Card -->
              <div class="col-lg-3 col-6">
                <div class="small-box text-bg-success">
                  <div class="inner">
              <h3>{{ services|length }}</h3>
              <p>Services</p>
                  </div>
