            <a href="{{ path('app_backoffice_code_promos_index') }}" class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
              Gérer les codes promos <i class="bi bi-link-45deg"></i>
            </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
{% endblock %}