{% extends 'backoffice/base.html.twig' %}

{% block title %}Nouveau Signalement{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Nouveau Signalement</h1>
            <a href="{{ path('app_backoffice_signalement_post_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Formulaire de création</h6>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.idPost, 'Publication concernée', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.idPost, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.idPost) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.idUtilisateur, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.idUtilisateur, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.idUtilisateur) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.raison, 'Raison du signalement', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.raison, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                {{ form_errors(form.raison) }}
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Créer
                            </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 