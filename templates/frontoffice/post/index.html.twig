{% extends 'frontoffice/base.html.twig' %}

{% block title %}Blog - Eventopia{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .blog-header {
            background: linear-gradient(135deg, rgba(194, 130, 130, 0.9) 0%, rgba(246, 214, 130, 0.9) 100%),
                        url('{{ asset('images/blog-header-bg.jpg') }}') center/cover no-repeat;
            padding: 6rem 0;
            margin-bottom: 4rem;
            position: relative;
            overflow: hidden;
            text-align: center;
        }

        .blog-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml;base64,');
            opacity: 0.1;
        }

        .blog-title {
            font-size: 3.5rem;
            font-weight: 800;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 1s ease-out;
        }

        .blog-subtitle {
            font-size: 1.4rem;
            color: rgba(255, 255, 255, 0.9);
            max-width: 600px;
            margin: 0 auto 2rem auto;
            animation: fadeInUp 1s ease-out 0.3s;
            animation-fill-mode: both;
        }

        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            padding: 0 1rem;
        }

        .post-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            top: 0;
            animation: fadeIn 0.6s ease-out;
        }

        .post-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .post-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 4px solid #f6d682;
        }

        .post-content {
            padding: 1.5rem;
        }

        .post-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }

        .post-excerpt {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 1rem;
            line-height: 1.6;
        }

        .post-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .post-date {
            color: #888;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .post-status {
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-published {
            background-color: #e6f6e6;
            color: #38a169;
        }

        .create-post-btn {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            border: 2px solid rgba(255, 255, 255, 0.4);
            transition: all 0.3s ease;
            text-decoration: none;
            margin-top: 1rem;
            backdrop-filter: blur(5px);
            animation: fadeInUp 1s ease-out 0.6s;
            animation-fill-mode: both;
        }

        .create-post-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
            border-color: rgba(255, 255, 255, 0.6);
        }

        .create-post-btn i {
            margin-right: 0.5rem;
        }

        .no-posts {
            text-align: center;
            padding: 4rem 2rem;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .no-posts-icon {
            font-size: 4rem;
            color: #c28282;
            margin-bottom: 1rem;
        }

        .no-posts-text {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 2rem;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .blog-title {
                font-size: 2.5rem;
            }

            .blog-subtitle {
                font-size: 1.2rem;
            }

            .posts-grid {
                grid-template-columns: 1fr;
                padding: 0 1rem;
            }

            .create-post-btn {
                bottom: 1.5rem;
                right: 1.5rem;
                padding: 0.8rem 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="blog-header">
        <div class="container">
            <h1 class="blog-title">Our Blog</h1>
            <p class="blog-subtitle">Discover the latest news, tips, and stories from our community</p>
            <a href="{{ path('app_client_post_new') }}" class="create-post-btn">
                <i class="fas fa-plus-circle"></i> Create New Post
            </a>
        </div>
    </section>

    <div class="container">
        {% if posts|length > 0 %}
            <div class="posts-grid">
                {% for post in posts %}
                    <article class="post-card" style="animation-delay: {{ loop.index0 * 0.1 }}s">
                        {% if post.photos %}
                            <img src="{{ asset('uploads/images/' ~ post.photos|json_decode|first) }}" alt="{{ post.titre }}" class="post-image">
                        {% else %}
                            <img src="{{ asset('images/default-post.jpg') }}" alt="Default post image" class="post-image">
                        {% endif %}
                        
                        <div class="post-content">
                            <h2 class="post-title">{{ post.titre }}</h2>
                            <p class="post-excerpt">{{ post.contenu|striptags|slice(0, 150) }}{% if post.contenu|length > 150 %}...{% endif %}</p>
                            
                            <div class="post-meta">
                                <div class="post-date">
                                    <i class="bi bi-calendar3"></i>
                                    {{ post.datePublication|date('M d, Y') }}
                                </div>
                                <span class="post-status status-{{ post.statut|lower }}">
                                    {{ post.statut }}
                                </span>
                            </div>
                        </div>
                        
                        <a href="{{ path('app_client_post_show', {'id_post': post.idPost}) }}" class="stretched-link"></a>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-posts">
                <i class="bi bi-journal-text no-posts-icon"></i>
                <p class="no-posts-text">No posts found. Be the first to share your story!</p>
                <a href="{{ path('app_client_post_new') }}" class="btn btn-primary btn-lg">Create Your First Post</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
