{% extends 'frontoffice/base.html.twig' %}

{% block title %}
    Modifier un plan - Festava Live
{% endblock %}

{% block body %}
<section class="plan-section section-padding">
    <div class="container">
        <!-- Messages flash -->
        <div class="flash-messages mb-5">
            {% for label in ['success', 'error', 'info', 'warning'] %}
                {% for message in app.flashes(label) %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show rounded-3 glow-effect animate__animated animate__fadeIn" role="alert">
                        <i class="bi bi-info-circle me-2"></i> {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <!-- Formulaire -->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-12">
                <div class="card bg-glass border-0 shadow-lg glow-effect animate__animated animate__fadeInUp">
                    <div class="card-body p-5">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        {{ form_errors(form)}}
                        <div class="row g-4">
                            <!-- Titre -->
                            <div class="col-12">
                                <div class="mb-5 form-group">
                                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                    <div class="invalid-feedback mt-1">
                                        {{ form_errors(form.titre) }}
                                    </div>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <div class="mb-5 form-group">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm description-field'}}) }}
                                    <div class="invalid-feedback mt-1">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>

                            <!-- Date de début et Date de fin (même ligne) -->
                            <div class="col-12">
                                <div class="row g-4 mb-5">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                            <div class="invalid-feedback mt-1">
                                                {{ form_errors(form.dateDebut) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                            <div class="invalid-feedback mt-1">
                                                {{ form_errors(form.dateFin) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Priorité et Lieu (même ligne) -->
                            <div class="col-12">
                                <div class="row g-4 mb-5">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.priorite, 'Priorité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                            {{ form_widget(form.priorite, {'attr': {'class': 'form-select form-select-lg rounded-3 shadow-sm'}}) }}
                                            <div class="invalid-feedback mt-1">
                                                {{ form_errors(form.priorite) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                            {{ form_widget(form.location, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                            <div class="invalid-feedback mt-1">
                                                {{ form_errors(form.location) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Boutons -->
                        <div class="action-buttons text-center d-flex justify-content-center gap-3 mt-5">
                        <button type="submit" class="btn btn-festival btn-lg glossy-btn glow-effect">
                                <i class="bi bi-save me-2"></i> Enregistrer
                            </button>
                            </div>


                        {{ form_end(form) }}
                        <div class="action-buttons text-center d-flex justify-content-center gap-3 mt-5">
                            
                            <a href="{{ path('app_plan_index') }}" class="btn btn-outline-light btn-lg glossy-btn glow-effect">
                                <i class="bi bi-arrow-left-circle me-2"></i> Retour
                            </a>
                            <form method="post" action="{{ path('app_plan_delete', {'id': plan.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce plan ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plan.id) }}">
                                <button type="submit" class="btn btn-outline-danger btn-lg glossy-btn glow-effect">
                                    <i class="bi bi-trash me-2"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animation.min.css" rel="stylesheet">
    <style>
        :root {
            --festival-primary: #ff4d94; /* Rose vibrant */
            --festival-secondary: #6b48ff; /* Violet électrique */
            --festival-accent: #CDA8C3; /* Violet pastel */
            --festival-bg: #1a0b2e; /* Fond cosmique sombre */
            --card-bg: rgba(255, 255, 255, 0.1);
            --text-muted: #b0b0b0;
            --white: #ffffff;
            --glow-color: rgba(255, 77, 148, 0.5);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--festival-bg);
            color: var(--white);
            overflow-x: hidden;
        }

        .plan-section {
            padding: 80px 0 120px;
            min-height: 100vh;
        }

        .container {
            position: relative;
            z-index: 1;
        }

        .flash-messages {
            position: relative;
            z-index: 2;
        }

        .alert {
            border-radius: 10px;
            backdrop-filter: blur(5px);
            color: var(--white);
        }

        .alert-info {
            background: rgba(205, 168, 195, 0.2);
            border-color: var(--festival-accent);
        }

        .bg-glass {
            background: var(--card-bg);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
        }

        .card {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .form-label {
            color: var(--festival-primary);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .form-control, .form-select {
            background-color: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--white);
            transition: all 0.3s ease;
            height: 48px;
        }

        .form-control:focus, .form-select:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: var(--festival-accent);
            box-shadow: 0 0 10px var(--festival-accent);
        }

        .form-select option {
            background-color: var(--festival-bg);
            color: var(--white);
        }

        .form-control.description-field {
            height: auto;
            min-height: 120px;
        }

        .invalid-feedback {
            color: #ff4d4d;
            font-size: 0.9rem;
            display: block;
        }

        .glow-effect {
            box-shadow: 0 0 20px var(--glow-color), 0 0 40px var(--glow-color);
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

        .glow-effect:hover {
            box-shadow: 0 0 30px var(--glow-color), 0 0 60px var(--glow-color);
            transform: translateY(-5px);
        }

        .action-buttons {
            position: relative;
            z-index: 2;
        }

        .btn-festival {
            background: linear-gradient(45deg, var(--festival-primary), var(--festival-secondary));
            color: var(--white);
            font-weight: 600;
            border: none;
            border-radius: 50px;
            padding: 0.75rem 2rem;
        }

        .btn-festival:hover {
            background: linear-gradient(45deg, var(--festival-secondary), var(--festival-primary));
            box-shadow: 0 0 20px var(--glow-color);
            transform: translateY(-3px);
        }

        .btn-outline-light {
            border-color: var(--festival-accent);
            color: var(--festival-accent);
            border-radius: 50px;
            padding: 0.75rem 2rem;
            background: rgba(205, 168, 195, 0.1);
        }

        .btn-outline-light:hover {
            background: var(--festival-accent);
            color: var(--festival-bg);
        }

        .btn-outline-danger {
            border-color: #ff4d4d;
            color: #ff4d4d;
            border-radius: 50px;
            padding: 0.75rem 2rem;
            background: rgba(255, 77, 77, 0.1);
        }

        .btn-outline-danger:hover {
            background: #ff4d4d;
            color: var(--white);
        }

        @media (max-width: 768px) {
            .plan-section {
                padding: 60px 0 100px;
            }

            .card-body {
                padding: 1.5rem;
            }

            .form-control, .form-select {
                font-size: 1rem;
            }

            .btn-lg {
                padding: 0.6rem 1.5rem;
                font-size: 1rem;
            }
        }

        @media (max-width: 576px) {
            .action-buttons {
                flex-direction: column;
                gap: 0.5rem;
            }

            .btn-lg {
                width: 100%;
                text-align: center;
            }
        }
    </style>
{% endblock %}