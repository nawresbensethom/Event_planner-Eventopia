{% extends 'frontoffice/base.html.twig' %}

{% block title %}{{ plan.titre }} – EvenTopia{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .plan-header {
            background: linear-gradient(135deg, rgba(194, 130, 130, 0.9) 0%, rgba(246, 214, 130, 0.9) 100%);
            padding: 4rem 0;
            position: relative;
            overflow: hidden;
            color: white;
        }
        .plan-header::before {
            content: '';
            position: absolute;
            inset: 0;
            background: url('data:image/svg+xml;base64,');
            opacity: 0.1;
        }
        .plan-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            animation: fadeInDown 0.8s ease-out;
            position: relative;
        }
        .plan-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            margin-bottom: 2rem;
            animation: fadeInUp 0.8s ease-out 0.2s;
            animation-fill-mode: both;
            position: relative;
            color: rgba(255,255,255,0.9);
            font-size: 1.1rem;
        }
        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .plan-content-wrapper {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-top: -3rem;
            position: relative;
            z-index: 2;
            animation: slideUp 1s ease-out;
            padding: 2rem;
            margin-bottom: 2rem;
            color: #444;
        }
        .plan-body {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .plan-actions-container {
            position: relative;
            margin-bottom: 4rem;
            z-index: 3;
            padding: 0 1rem;
        }
        .plan-actions {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(20px);
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            border-radius: 20px;
            max-width: 900px;
            margin: 0 auto;
            border: 1px solid rgba(255,255,255,0.2);
            position: relative;
            overflow: hidden;
        }
        .plan-actions::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg,
                transparent 0%,
                rgba(194,130,130,0.2) 20%,
                rgba(194,130,130,0.2) 80%,
                transparent 100%
            );
        }
        .btn-action {
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
            min-width: 140px;
            justify-content: center;
            font-size: 0.95rem;
            text-transform: uppercase;
            position: relative;
            overflow: hidden;
        }
        .btn-action::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg,
                rgba(255,255,255,0.1) 0%,
                rgba(255,255,255,0.2) 50%,
                rgba(255,255,255,0.1) 100%
            );
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .btn-action:hover::before {
            opacity: 1;
        }
        .btn-action i {
            font-size: 1.2rem;
            transition: transform 0.4s cubic-bezier(0.4,0,0.2,1);
        }
        .btn-action:hover i {
            transform: translateX(-3px) scale(1.1);
        }

        .btn-back {
            background: #f8f9fa;
            color: #495057;
            border: 2px solid #e9ecef;
            box-shadow: 0 5px 20px rgba(73,80,87,0.1);
        }
        .btn-back:hover {
            background: #e9ecef;
            border-color: #dee2e6;
            transform: translateY(-3px);
        }
        .btn-edit {
            background: linear-gradient(135deg, #c28282 0%, #f6d682 100%);
            color: white;
            border: none;
            box-shadow: 0 5px 20px rgba(194,130,130,0.3);
        }
        .btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(194,130,130,0.4);
        }
        .btn-delete {
            background: white;
            color: #dc3545;
            border: 2px solid #dc3545;
            box-shadow: 0 5px 20px rgba(220,53,69,0.15);
        }
        .btn-delete:hover {
            background: #dc3545;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(220,53,69,0.3);
        }
        .btn-tasks {
            background: linear-gradient(45deg, rgba(102,153,255,1), rgba(102,204,255,1));
            color: white;
            border: none;
            box-shadow: 0 5px 20px rgba(102,153,255,0.3);
        }
        .btn-tasks:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(102,153,255,0.4);
        }

        @keyframes fadeInDown { from {opacity:0;transform:translateY(-20px);}to{opacity:1;transform:translateY(0);} }
        @keyframes fadeInUp   { from {opacity:0;transform:translateY(20px);} to{opacity:1;transform:translateY(0);} }
        @keyframes slideUp    { from {opacity:0;transform:translateY(40px);} to{opacity:1;transform:translateY(0);} }

        @media (max-width:768px) {
            .plan-title { font-size:2rem; }
            .plan-meta { flex-direction:column; gap:1rem; align-items:flex-start; }
            .plan-content-wrapper { padding:1.5rem; }
            .plan-actions { padding:1rem; gap:0.5rem; }
            .btn-action { flex:1 1 calc(50% - 0.5rem); min-width:0; padding:0.9rem 1.2rem; font-size:0.85rem; }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="plan-header">
        <div class="container">
            <h1 class="plan-title">{{ plan.titre }}</h1>
            <div class="plan-meta">
                <div class="meta-item"><i class="bi bi-calendar3"></i> {{ plan.dateDebut|date('d/m/Y') }}</div>
                <div class="meta-item"><i class="bi bi-calendar3-fill"></i> {{ plan.dateFin|date('d/m/Y') }}</div>
                <div class="meta-item"><i class="bi bi-flag"></i> {{ plan.priorite|capitalize }}</div>
                <div class="meta-item"><i class="bi bi-geo-alt"></i> {{ plan.location }}</div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="plan-content-wrapper">
            <div class="plan-body">
                {{ plan.description|nl2br }}
            </div>
        </div>

        <div class="plan-actions-container">
            <div class="plan-actions">
                <a href="{{ path('app_plan_index') }}" class="btn-action btn-back">
                    <i class="bi bi-arrow-left-circle"></i> Retour
                </a>
                <a href="{{ path('app_plan_edit',   {id: plan.id}) }}" class="btn-action btn-edit">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <form method="post"
                      action="{{ path('app_plan_delete',{id: plan.id}) }}"
                      onsubmit="return confirm('Êtes-vous sûr ?');"
                      style="display:inline-block">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete'~plan.id) }}">
                    <button class="btn-action btn-delete">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
