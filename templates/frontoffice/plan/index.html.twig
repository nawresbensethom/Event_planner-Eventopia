{% extends 'frontoffice/base.html.twig' %}

{% block title %}Plans – EvenTopia{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* --- Header Section --- */
        .plan-header {
            background: linear-gradient(135deg, rgba(194, 130, 130, 0.9) 0%, rgba(246, 214, 130, 0.9) 100%),
                        url('{{ asset('images/plan-header-bg.jpg') }}') center/cover no-repeat;
            padding: 6rem 0;
            margin-bottom: 4rem;
            position: relative;
            text-align: center;
            color: white;
        }
        .plan-header::before {
            content: '';
            position: absolute; inset: 0;
            background: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0i...') center/cover no-repeat;
            opacity: 0.1;
        }
        .plan-title {
            font-size: 3.5rem;
            font-weight: 800;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            animation: fadeInDown 1s ease-out;
            position: relative;
        }
        .plan-subtitle {
            font-size: 1.4rem;
            max-width: 600px;
            margin: 1rem auto 2rem;
            animation: fadeInUp 1s ease-out 0.3s;
            position: relative;
        }
        .create-plan-btn {
            display: inline-block;
            background: rgba(255,255,255,0.2);
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            border: 2px solid rgba(255,255,255,0.4);
            text-decoration: none;
            animation: fadeInUp 1s ease-out 0.6s;
            backdrop-filter: blur(5px);
            position: relative;
        }
        .create-plan-btn:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
            border-color: rgba(255,255,255,0.6);
        }

        /* --- Grid & Cards --- */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px,1fr));
            gap: 2rem;
            padding: 0 1rem 4rem;
        }
        .post-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
            animation: fadeIn 0.6s ease-out;
        }
        .post-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }
        .post-content {
            padding: 1.5rem;
        }
        .post-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }
        .post-excerpt {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 1rem;
            line-height: 1.6;
        }
        .post-meta {
            display: flex;
            justify-content: space-between;
            border-top: 1px solid #eee;
            padding-top: 1rem;
            font-size: 0.9rem;
            color: #888;
        }
        .post-actions {
            border-top: 1px solid #eee;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 0.5rem;
            background: #fff;
        }
        .post-actions .btn {
            font-size: 0.85rem;
        }

        /* --- Animations --- */
        @keyframes fadeIn { from {opacity:0; transform:translateY(20px);} to {opacity:1; transform:translateY(0);} }
        @keyframes fadeInDown { from {opacity:0; transform:translateY(-20px);} to {opacity:1; transform:translateY(0);} }
        @keyframes fadeInUp { from {opacity:0; transform:translateY(20px);} to {opacity:1; transform:translateY(0);} }

        /* --- Responsive --- */
        @media (max-width: 768px) {
            .plan-title { font-size: 2.5rem; }
            .plan-subtitle { font-size: 1.2rem; }
            .posts-grid { grid-template-columns: 1fr; }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="plan-header">
        <div class="container">
            <h1 class="plan-title">Vos Plans</h1>
            <p class="plan-subtitle">Créez et gérez vos plannings pour l’événement</p>
            <a href="{{ path('app_plan_new') }}" class="create-plan-btn">
                <i class="fas fa-plus-circle me-2"></i> Nouveau Plan
            </a>
        </div>
    </section>

    <div class="container">
        {% if plans|length > 0 %}
            <div class="posts-grid">
                {% for plan in plans %}
                    <article class="post-card" style="animation-delay: {{ loop.index0 * 0.1 }}s">
                        <div class="post-content">
                            <h2 class="post-title">{{ plan.titre }}</h2>
                            <p class="post-excerpt">
                                {{ plan.description|striptags|slice(0, 100) }}{% if plan.description|length > 100 %}…{% endif %}
                            </p>
                            <div class="post-meta">
                                <span><i class="bi bi-calendar3"></i> {{ plan.dateDebut|date('d/m/Y') }}</span>
                                <span><i class="bi bi-flag"></i> {{ plan.priorite|capitalize }}</span>
                            </div>
                        </div>

                        <div class="post-actions">
                            <a href="{{ path('app_plan_show',      {'id': plan.id}) }}" class="btn btn-outline-dark btn-sm glossy-btn">
                                <i class="bi bi-eye me-1"></i> Voir
                            </a>
                            <a href="{{ path('app_plan_edit',      {'id': plan.id}) }}" class="btn btn-outline-dark btn-sm glossy-btn">
                                <i class="bi bi-pencil me-1"></i> Modifier
                            </a>
                            <a href="{{ path('app_tache_by_plan',  {'id': plan.id}) }}" class="btn btn-outline-dark btn-sm glossy-btn">
                                <i class="bi bi-list-check me-1"></i> Tâches
                            </a>
                            {{ include('frontoffice/plan/_delete_form.html.twig', {'plan': plan}) }}
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-posts text-center py-5">
                <i class="bi bi-calendar-x no-posts-icon" style="font-size:4rem;color:#c28282;"></i>
                <p class="no-posts-text">Aucun plan trouvé. Créez votre premier plan !</p>
                <a href="{{ path('app_plan_new') }}" class="btn btn-primary btn-lg">Créer un Plan</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
