{% extends '/frontoffice/base.html.twig' %}

{% block title %}Détail de l'événement - {{ evenement.getNomEvenement()|length > 50 ? evenement.getNomEvenement()|slice(0, 50) ~ '...' : evenement.getNomEvenement() }} - Eventopia{% endblock %}

{% block hero %}
<section class="hero module-evenement">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="animate-on-scroll">{{ evenement.getNomEvenement()|length > 50 ? evenement.getNomEvenement()|slice(0, 50) ~ '...' : evenement.getNomEvenement() }}</h1>
                <p class="animate-on-scroll">Découvrez les détails de cet événement</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="container py-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                {% set imageSrc = evenement.image ? '/Uploads/evenements/' ~ evenement.image : '/images/event-detail.jpg' %}
                <img src="{{ asset(imageSrc) }}" class="card-img-top" alt="{{ evenement.getNomEvenement()|default('Événement sans nom') }}">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="badge bg-primary">{{ evenement.category|capitalize|default('Non spécifiée') }}</span>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-share-alt"></i></a>
                            <a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-heart"></i></a>
                        </div>
                    </div>
                    <h1 class="card-title mb-3">{{ evenement.getNomEvenement()|default('Événement sans nom') }}</h1>
                    <div class="d-flex flex-wrap gap-4 mb-4">
                        <div>
                            <p class="text-muted mb-1"><i class="fas fa-calendar-alt me-2"></i> Date</p>
                            <p class="fw-bold">{{ evenement.getDateEvenement() ? evenement.getDateEvenement()|date('d/m/Y') : 'Date non spécifiée' }}</p>
                        </div>
                        <div>
                            <p class="text-muted mb-1"><i class="fas fa-map-marker-alt me-2"></i> Lieu</p>
                            <p class="fw-bold">
                                {% if evenement.getRue() or evenement.getCodePostal() or evenement.getVille() %}
                                    {{ evenement.getRue() ? evenement.getRue() ~ ', ' : '' }}
                                    {{ evenement.getCodePostal() ? evenement.getCodePostal() ~ ' ' : '' }}
                                    {{ evenement.getVille() ? evenement.getVille() : '' }}
                                {% else %}
                                    Non spécifié
                                {% endif %}
                            </p>
                        </div>
                        <div>
                            <p class="text-muted mb-1"><i class="fas fa-users me-2"></i> Participants</p>
                            <p class="fw-bold">{{ evenement.getListeInvites() ? evenement.getListeInvites()|length ~ ' participants' : 'Inscriptions non disponibles' }}</p>
                        </div>
                    </div>

                    <h4 class="mb-3">Description</h4>
                    <p>{{ evenement.getDescription()|default('Aucune description disponible') }}</p>

                    <h4 class="mb-3 mt-4">Détails supplémentaires</h4>
                    <div class="mb-4">
                        <p><strong>Durée :</strong> {{ evenement.getDuree() ? evenement.getDuree() ~ ' minutes' : 'Non spécifiée' }}</p>
                        <p><strong>Statut de réservation :</strong> {{ evenement.getStatut()|replace({'reserve': 'Réservé', 'non reserve': 'Non réservé'})|default('Non spécifié') }}</p>
                        <p><strong>Statut de l'événement :</strong> {{ evenement.getStatut2()|replace({'en cours': 'En cours', 'terminé': 'Terminé', 'en preparation': 'En préparation'})|default('Non spécifié') }}</p>
                        <p><strong>Visibilité :</strong> {{ evenement.getStatut3()|capitalize|default('Non spécifiée') }}</p>
                        <p><strong>Invités :</strong> {{ evenement.getListeInvites() ? evenement.getListeInvites()|join(', ') : 'Aucun' }}</p>
                    </div>

                    <h4 class="mb-3 mt-4">Programme</h4>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-item-date">09:00</div>
                            <div class="timeline-item-content">
                                <h5>Accueil des participants</h5>
                                <p>Café et viennoiseries offerts</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-item-date">10:00</div>
                            <div class="timeline-item-content">
                                <h5>Conférence d'ouverture</h5>
                                <p>Présentation des intervenants et du programme</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-item-date">12:30</div>
                            <div class="timeline-item-content">
                                <h5>Déjeuner</h5>
                                <p>Buffet gastronomique</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-item-date">14:00</div>
                            <div class="timeline-item-content">
                                <h5>Ateliers thématiques</h5>
                                <p>Sessions en petits groupes</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-item-date">17:00</div>
                            <div class="timeline-item-content">
                                <h5>Cocktail de clôture</h5>
                                <p>Networking et échanges informels</p>
                            </div>
                        </div>
                    </div>

                    {% if app.user and app.user != evenement.getIdOrganisateur() %}
                        <div class="d-grid gap-2 mt-4">
                            <a href="{{ path('app_reservation_new', {'evenement_id': evenement.getId()}) }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-ticket-alt me-2"></i> Réserver ma place
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Services inclus</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-utensils fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Traiteur</h5>
                                    <p class="mb-0 text-muted">Buffet gastronomique et cocktail</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-camera fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Photographie</h5>
                                    <p class="mb-0 text-muted">Couverture complète de l'événement</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-music fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Animation musicale</h5>
                                    <p class="mb-0 text-muted">DJ professionnel</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-parking fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Parking</h5>
                                    <p class="mb-0 text-muted">Places réservées pour les participants</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Commentaires (3)</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex mb-3">
                            <img src="{{ asset('images/avatar1.jpg') }}" alt="Sophie Martin" class="rounded-circle me-3" width="50" height="50">
                            <div>
                                <h5 class="mb-0">Sophie Martin</h5>
                                <div class="text-warning mb-1">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <p class="text-muted small">Il y a 2 jours</p>
                            </div>
                        </div>
                        <p>J'ai participé à cet événement l'année dernière et c'était fantastique ! L'organisation était impeccable et les intervenants de grande qualité. Je recommande vivement !</p>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex mb-3">
                            <img src="{{ asset('images/avatar2.jpg') }}" alt="Thomas Dubois" class="rounded-circle me-3" width="50" height="50">
                            <div>
                                <h5 class="mb-0">Thomas Dubois</h5>
                                <div class="text-warning mb-1">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <p class="text-muted small">Il y a 5 jours</p>
                            </div>
                        </div>
                        <p>Très bon événement, j'ai beaucoup appris et fait de belles rencontres. Le seul bémol était le parking un peu limité, mais sinon tout était parfait !</p>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex mb-3">
                            <img src="{{ asset('images/avatar3.jpg') }}" alt="Camille Leroy" class="rounded-circle me-3" width="50" height="50">
                            <div>
                                <h5 class="mb-0">Camille Leroy</h5>
                                <div class="text-warning mb-1">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                                <p class="text-muted small">Il y a 1 semaine</p>
                            </div>
                        </div>
                        <p>Un événement très enrichissant avec des intervenants de qualité. Le buffet était délicieux et l'ambiance très conviviale. J'ai hâte de participer à la prochaine édition !</p>
                    </div>

                    <a href="#" class="btn btn-outline-primary">Voir tous les commentaires</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4 sticky-top" style="top: 100px;">
                <div class="card-header">
                    <h4 class="mb-0">Réserver</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="ticketType" class="form-label">Type de billet</label>
                        <select class="form-select" id="ticketType">
                            <option value="standard">Billet standard</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="ticketQuantity" class="form-label">Quantité</label>
                        <div class="input-group">
                            <button class="btn btn-outline-secondary" type="button" id="decreaseQuantity">-</button>
                            <input type="number" class="form-control text-center" id="ticketQuantity" value="1" min="1" max="10">
                            <button class="btn btn-outline-secondary" type="button" id="increaseQuantity">+</button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="promoCode" class="form-label">Code promo</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="promoCode" placeholder="Entrez votre code">
                            <button class="btn btn-outline-primary" type="button">Appliquer</button>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Prix unitaire:</span>
                        <span>Gratuit</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Quantité:</span>
                        <span>1</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total:</span>
                        <span>0.00 €</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Frais de service:</span>
                        <span>0.00 €</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Réduction:</span>
                        <span>0.00 €</span>
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold">Total:</span>
                        <span class="fw-bold">0.00 €</span>
                    </div>

                    {% if app.user and app.user != evenement.getIdOrganisateur() %}
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_reservation_new', {'evenement_id': evenement.getId()}) }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-ticket-alt me-2"></i> Réserver maintenant
                            </a>
                            <button class="btn btn-outline-primary">
                                <i class="fas fa-calendar-plus me-2"></i> Ajouter au calendrier
                            </button>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Organisateur</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <img src="{{ asset('images/organizer.jpg') }}" alt="Organisateur" class="rounded-circle me-3" width="60" height="60">
                        <div>
                            <h5 class="mb-0">{{ evenement.getIdOrganisateur() ? evenement.getIdOrganisateur().getNom() : 'Organisateur inconnu' }}</h5>
                            <p class="text-muted mb-0">Organisateur d'événements</p>
                        </div>
                    </div>
                    <p>Aucun détail supplémentaire disponible.</p>
                    {% if evenement.getIdOrganisateur() %}
                        <a href="{{ path('app_utilisateur_show', {'id': evenement.getIdOrganisateur().getId()}) }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-user me-2"></i> Voir le profil
                        </a>
                    {% endif %}
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Localisation</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="ratio ratio-16x9">
                            <div id="map" style="height: 100%;"></div>
                        </div>
                    </div>
                    <p>
                        <i class="fas fa-map-marker-alt me-2"></i>
                        {% if evenement.getRue() or evenement.getCodePostal() or evenement.getVille() %}
                            {{ evenement.getRue() ? evenement.getRue() ~ ', ' : '' }}
                            {{ evenement.getCodePostal() ? evenement.getCodePostal() ~ ' ' : '' }}
                            {{ evenement.getVille() ? evenement.getVille() : '' }}
                        {% else %}
                            Non spécifié
                        {% endif %}
                    </p>
                    <div class="d-grid">
                        <a href="https://www.google.com/maps/search/{{ (evenement.getRue() ~ ' ' ~ evenement.getCodePostal() ~ ' ' ~ evenement.getVille())|url_encode }}" target="_blank" class="btn btn-outline-primary">
                            <i class="fas fa-directions me-2"></i> Itinéraire
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Partager</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-facebook-f me-2"></i> Facebook
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-twitter me-2"></i> Twitter
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-linkedin-in me-2"></i> LinkedIn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Include Leaflet.js CSS and JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Leaflet map
    const map = L.map('map').setView([48.8566, 2.3522], 13); // Default to Paris
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
        maxZoom: 19
    }).addTo(map);

    {% if evenement.getLatitude() and evenement.getLongitude() %}
        map.setView([{{ evenement.getLatitude() }}, {{ evenement.getLongitude() }}], 15);
        L.marker([{{ evenement.getLatitude() }}, {{ evenement.getLongitude() }}]).addTo(map);
    {% endif %}
});
</script>
{% endblock %}