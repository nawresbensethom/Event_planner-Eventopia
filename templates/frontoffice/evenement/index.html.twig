{% extends 'frontoffice/base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block hero %}
<section class="hero module-evenement">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="animate-on-scroll">Gestion des Événements</h1>
                <p class="animate-on-scroll">Créez, organisez et gérez vos événements en toute simplicité</p>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="{{ path('app_evenement_new') }}" class="btn btn-primary btn-lg animate-on-scroll">
                        <i class="fas fa-plus-circle me-2"></i> Créer un événement
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-lg animate-on-scroll">
                        <i class="fas fa-calendar-alt me-2"></i> Voir le calendrier
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-8">
        <h2>Événements à venir</h2>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Rechercher un événement..." id="searchEvent">
            <button class="btn btn-outline-primary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="btn-group filter-buttons" role="group" aria-label="Filtrer les événements">
            <button type="button" class="btn btn-outline-primary filter-button active" data-filter="all">Tous</button>
            <button type="button" class="btn btn-outline-primary filter-button" data-filter="conference">Conférences</button>
            <button type="button" class="btn btn-outline-primary filter-button" data-filter="festival">Festivals</button>
            <button type="button" class="btn btn-outline-primary filter-button" data-filter="gala">Galas</button>
            <button type="button" class="btn btn-outline-primary filter-button" data-filter="mariage">Mariages</button>
            <button type="button" class="btn btn-outline-primary filter-button" data-filter="corporate">Événements d'entreprise</button>
        </div>
    </div>
</div>

<div class="row">
    {% for evenement in evenements %}
    <div class="col-md-4 mb-4 filterable-item {{ evenement.typePublic|lower }}">
        <div class="card h-100">
            <img src="{{ asset('images/event' ~ evenement.id ~ '.jpg') }}" class="card-img-top" alt="{{ evenement.nom }}">
            <div class="card-body">
                <span class="badge badge-primary mb-2">{{ evenement.typePublic }}</span>
                <h3 class="card-title">{{ evenement.nom }}</h3>
                <p class="card-text">{{ evenement.description|slice(0, 50) }}...</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted"><i class="fas fa-calendar-alt me-1"></i> {{ evenement.date ? evenement.date|date('Y-m-d H:i') : '' }}</small>
                    <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i> {{ evenement.lieu }}</small>
                </div>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between">
                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-outline-primary">
                    <i class="fas fa-eye me-1"></i> Détails
                </a>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i> Modifier
                </a>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12 text-center">
        <p>Aucun enregistrement trouvé</p>
    </div>
    {% endfor %}
</div>

<div class="row mt-4">
    <div class="col-12">
        <nav aria-label="Pagination des événements">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Précédent</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Suivant</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<a href="{{ path('app_evenement_new') }}" class="btn btn-primary">Créer nouveau</a>
{% endblock %}

