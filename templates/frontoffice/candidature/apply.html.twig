{% extends 'frontoffice/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-warning text-white rounded-top-4">
            <h3 class="mb-0 fw-bold">Postuler Ã  l'offre : {{ offreemploi.titrePoste }}</h3>
        </div>
        <div class="card-body p-4 bg-light">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.cv, 'Votre CV (PDF)', {'label_attr': {'class': 'form-label text-dark fw-bold'}}) }}
                {{ form_widget(form.cv, {'attr': {'class': 'form-control border-warning'}}) }}
                {{ form_errors(form.cv) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.lettre_motivation, 'Lettre de motivation', {'label_attr': {'class': 'form-label text-dark fw-bold'}}) }}
                {{ form_widget(form.lettre_motivation, {'attr': {'class': 'form-control border-warning', 'rows': 5}}) }}
                {{ form_errors(form.lettre_motivation) }}
            </div>

            <button type="submit" class="btn btn-warning text-white fw-bold px-4">
                <i class="bi bi-send-fill me-2"></i>Envoyer ma candidature
            </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
