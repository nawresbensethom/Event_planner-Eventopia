{% extends 'frontoffice/base.html.twig' %}

{% block title %}{{ service.nom }} - Eventopia{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .service-header {
            background: linear-gradient(135deg, rgba(194, 130, 130, 0.9) 0%, rgba(246, 214, 130, 0.9) 100%);
            padding: 6rem 0 8rem;
            position: relative;
            overflow: hidden;
            color: white;
            margin-bottom: -4rem;
        }

        .service-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml;base64,');
            opacity: 0.1;
        }

        .service-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 0.8s ease-out;
        }

        .service-meta {
            display: flex;
            align-items: center;
            gap: 2rem;
            margin-bottom: 2rem;
            animation: fadeInUp 0.8s ease-out 0.2s;
            animation-fill-mode: both;
            flex-wrap: wrap;
            justify-content: center;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.2rem;
            background: rgba(255, 255, 255, 0.1);
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .meta-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .meta-item i {
            font-size: 1.3rem;
        }

        .service-content-wrapper {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 2;
            animation: slideUp 1s ease-out;
            margin: 0 auto 3rem;
            max-width: 1200px;
            overflow: hidden;
        }

        .service-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 20px 20px 0 0;
            transition: all 0.5s ease;
        }

        .service-image:hover {
            transform: scale(1.02);
        }

        .service-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            padding: 2rem;
            background: #f8f9fa;
            border-radius: 20px 20px 0 0;
        }

        .info-box {
            background: white;
            padding: 1.8rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border-left: 4px solid #c28282;
            transition: all 0.3s ease;
        }

        .info-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .info-label {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .info-value {
            color: #333;
            font-weight: 600;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .info-value i {
            color: #c28282;
            font-size: 1.4rem;
        }

        .service-description {
            padding: 2.5rem;
            font-size: 1.1rem;
            line-height: 1.8;
            color: #444;
            background: white;
        }

        .service-actions {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            padding: 2rem;
            background: #f8f9fa;
            border-top: 1px solid #eee;
        }

        .btn-action {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-back {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
            border: none;
        }

        .btn-edit {
            background: linear-gradient(135deg, #c28282 0%, #f6d682 100%);
            color: white;
            border: none;
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            border: none;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }

        #checkout-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            background: linear-gradient(135deg, #2dce89 0%, #2dcecc 100%);
            color: white;
            border: none;
            padding: 1.2rem 3rem;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
            margin: 2rem auto;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 4px 6px rgba(45, 206, 137, 0.2);
        }

        #checkout-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(45, 206, 137, 0.3);
        }

        #checkout-button:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
        }

        @media (max-width: 768px) {
            .service-title {
                font-size: 2.5rem;
            }

            .service-meta {
                flex-direction: column;
                gap: 1rem;
            }

            .meta-item {
                width: 100%;
                justify-content: center;
            }

            .service-image {
                height: 300px;
            }

            .service-actions {
                flex-direction: column;
            }

            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('pk_test_51QyvkfEjy3W4LeF57zoRkeaICmFWZ6UtEFdwmm6B6HwWf4kbQZ4TlLvuwoonmmgjxcl82papEM7kGK4uYHtIT15i00D71MvMax');

        document.getElementById('checkout-button').addEventListener('click', function() {
            // Désactiver le bouton pendant le chargement
            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Chargement...';

            // Créer la session de paiement
            fetch('{{ path('app_payment_checkout', {'id': service.idService}) }}')
                .then(function(response) {
                    return response.json();
                })
                .then(function(session) {
                    if (session.error) {
                        throw new Error(session.error);
                    }
                    return stripe.redirectToCheckout({ sessionId: session.id });
                })
                .then(function(result) {
                    if (result.error) {
                        throw new Error(result.error.message);
                    }
                })
                .catch(function(error) {
                    console.error('Erreur:', error);
                    const button = document.getElementById('checkout-button');
                    button.disabled = false;
                    button.innerHTML = 'Réessayer le paiement';
                    alert('Une erreur est survenue. Veuillez réessayer.');
                });
        });
    </script>
{% endblock %}

{% block body %}
    <section class="service-header">
        <div class="container text-center">
            <h1 class="service-title">{{ service.nom }}</h1>
            <div class="service-meta">
                <div class="meta-item">
                    <i class="fas fa-tag"></i>
                    {{ service.categorieService.nomCategorie }}
                </div>
                <div class="meta-item">
                    <i class="fas fa-euro-sign"></i>
                    {{ service.tarif }} €
                </div>
                <div class="meta-item">
                    <i class="fas fa-calendar-alt"></i>
                    {{ service.dateAjout|date('d/m/Y') }}
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="service-content-wrapper">
            {% if service.photos %}
                <img src="{{ asset('uploads/services/' ~ service.photos) }}" 
                     alt="{{ service.nom }}" 
                     class="service-image">
            {% endif %}

            <div class="service-info">
                <div class="info-box">
                    <div class="info-label">Catégorie</div>
                    <div class="info-value">
                        <i class="fas fa-tag mr-2"></i> {{ service.categorieService.nomCategorie }}
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-label">Tarif</div>
                    <div class="info-value">
                        <i class="fas fa-euro-sign mr-2"></i> {{ service.tarif }} €
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-label">Date d'ajout</div>
                    <div class="info-value">
                        <i class="fas fa-calendar-alt mr-2"></i> {{ service.dateAjout|date('d/m/Y') }}
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-label">Propriétaire</div>
                    <div class="info-value">
                        <i class="fas fa-user mr-2"></i> {{ service.utilisateur.nom }}
                    </div>
                </div>
            </div>

            <div class="service-description">
                {{ service.description|nl2br }}
            </div>

            <div class="service-actions">
                <a href="{{ path('app_client_service_index') }}" class="btn-action btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la liste
                </a>
                
                <a href="{{ path('app_client_service_edit', {'id': service.idService}) }}" class="btn-action btn-edit">
                    <i class="fas fa-edit"></i>
                    Modifier
                </a>
                
                <form method="post" action="{{ path('app_client_service_delete', {'id': service.idService}) }}" 
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?');" 
                      style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.idService) }}">
                    <button class="btn-action btn-delete">
                        <i class="fas fa-trash-alt"></i>
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>

    <button id="checkout-button" class="btn btn-primary btn-lg">
        <i class="fas fa-credit-card"></i> Payer {{ service.tarif }}€
    </button>
{% endblock %} 