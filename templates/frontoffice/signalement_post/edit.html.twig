{% extends 'frontoffice/base.html.twig' %}

{% block title %}Modifier le signalement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .header-section {
            background: linear-gradient(135deg, #c28282 0%, #f6d682 100%);
            padding: 2rem;
            text-align: center;
            margin-bottom: 2rem;
            border-radius: 0 0 30px 30px;
        }

        .header-title {
            color: white;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .header-subtitle {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
        }

        .form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        .form-control:disabled {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

        .form-textarea {
            min-height: 150px;
            resize: vertical;
        }

        .btn-submit {
            background-color: var(--primary-color);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
            display: block;
            width: 100%;
            margin-top: 1rem;
        }

        .btn-submit:hover {
            background-color: #ff6b4a;
        }

        .btn-back {
            display: inline-block;
            margin-top: 1rem;
            color: var(--dark-color);
            text-decoration: none;
            transition: color 0.3s;
        }

        .btn-back:hover {
            color: var(--primary-color);
        }

        .alert-danger {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 4px;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .status-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .status-pending {
            background-color: #ffeeba;
            color: #856404;
        }

        .status-processed {
            background-color: #d4edda;
            color: #155724;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            align-items: center;
        }

        .info-field {
            margin-bottom: 1.5rem;
        }
        .info-label {
            font-weight: 600;
            color: #666;
            margin-bottom: 0.5rem;
        }
        .info-value {
            padding: 0.75rem;
            background: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header-section">
        <h1 class="header-title">Modifier le signalement</h1>
        <p class="header-subtitle">Modifiez la raison de votre signalement</p>
    </div>

    <div class="form-container">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="status-badge {% if signalement_post.statut == 'En attente' %}status-pending{% else %}status-processed{% endif %}">
            Statut : {{ signalement_post.statut }}
        </div>

        <div class="info-field">
            <div class="info-label">Publication concernée</div>
            <div class="info-value">{{ signalement_post.idPost.titre }}</div>
        </div>

        <div class="info-field">
            <div class="info-label">Utilisateur concerné</div>
            <div class="info-value">{{ signalement_post.idUtilisateur.nom }}</div>
        </div>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.raison, 'Motif du signalement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.raison, {'attr': {'class': 'form-control form-textarea'}}) }}
                {{ form_errors(form.raison) }}
            </div>

            <button type="submit" class="btn-submit">Enregistrer les modifications</button>
        {{ form_end(form) }}

        <div class="actions">
            <a href="{{ path('app_client_signalement_post_index') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
