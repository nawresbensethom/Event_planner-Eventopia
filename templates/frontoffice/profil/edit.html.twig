{% extends 'frontoffice/base.html.twig' %}

{% block title %}Edit Profile - {{ profil.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --light-color: #f8f9fa;
            --border-radius: 8px;
            --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .profile-edit-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .page-title {
            color: var(--secondary-color);
            font-weight: 600;
            margin: 0;
        }

        .form-card {
            padding: 1.5rem;
            background: var(--light-color);
            border-radius: var(--border-radius);
            margin-bottom: 2rem;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-outline {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: white;
        }

        .btn-outline:hover {
            background-color: rgba(52, 152, 219, 0.1);
        }

        .btn-warning {
            background-color: var(--warning-color);
            color: white;
            border: 1px solid var(--warning-color);
        }

        .btn-warning:hover {
            background-color: #e67e22;
            transform: translateY(-1px);
            box-shadow: var(--box-shadow);
        }

        .btn-danger {
            background-color: var(--danger-color);
            color: white;
            border: 1px solid var(--danger-color);
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .photo-preview-container {
            margin: 1rem 0;
            text-align: center;
        }

        .current-photo {
            max-width: 200px;
            max-height: 200px;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .upload-area {
            border: 2px dashed #ccc;
            padding: 1.5rem;
            text-align: center;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: all 0.3s;
            margin: 1rem 0;
        }

        .upload-area:hover {
            border-color: var(--primary-color);
            background: rgba(52, 152, 219, 0.05);
        }

        .photo-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .form-actions {
                flex-direction: column-reverse;
                gap: 1rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .photo-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="profile-edit-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-user-edit me-2"></i>Edit Profile #{{ profil.id }}
            </h1>
        </div>

        <div class="form-card">
            {{ form_start(form, {'attr': {'class': 'profile-form', 'novalidate': 'novalidate'}}) }}

                <div class="mb-4">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.rating, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.rating, {'attr': {'class': 'form-control', 'min': 0, 'max': 5, 'step': 0.5}}) }}
                    {{ form_errors(form.rating) }}
                </div>

                <div class="mb-4">
                    <label class="form-label">Profile Photo</label>

                    {% if profil.photo %}
                        <div class="photo-preview-container">
                            <img src="{{ asset('uploads/photos/' ~ profil.photo) }}" 
                                 class="current-photo" 
                                 alt="Current profile photo">
                            <div class="photo-actions mt-3">
                                <button type="button" class="btn btn-outline btn-sm" 
                                        onclick="document.getElementById('{{ form.photo.vars.id }}').click()">
                                    <i class="fas fa-sync-alt me-2"></i>Change Photo
                                </button>
                                <button type="button" class="btn btn-outline btn-sm"
                                        onclick="document.getElementById('{{ form.remove_photo.vars.id }}').checked = true; 
                                                document.querySelector('.current-photo').style.opacity = '0.5';
                                                this.disabled = true;">
                                    <i class="fas fa-trash-alt me-2"></i>Remove Photo
                                </button>
                                {{ form_widget(form.remove_photo, {'attr': {'class': 'd-none'}}) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="upload-area" id="uploadArea" {% if profil.photo %}style="display: none"{% endif %}>
                        <i class="fas fa-cloud-upload-alt fa-3x mb-3 text-muted"></i>
                        <p class="mb-2">Drag & drop your photo here or click to browse</p>
                        <small class="text-muted">(JPEG, PNG - Max 2MB)</small>
                        {{ form_widget(form.photo, {'attr': {'class': profil.photo ? 'd-none' : '', 'required': 'required'}}) }}
                    </div>
                    {{ form_errors(form.photo) }}
                </div>

                <div class="form-actions">
                    <div>
                        <a href="{{ path('app_profil_edit') }}" class="btn btn-outline">
                            <i class="fas fa-arrow-left me-2"></i>Back to list
                        </a>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>{{ button_label|default('Update') }}
                        </button>
                        
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const photoInput = document.getElementById('{{ form.photo.vars.id }}');
            const uploadArea = document.getElementById('uploadArea');

            if (photoInput) {
                photoInput.addEventListener('change', function(e) {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const preview = document.createElement('img');
                            preview.src = e.target.result;
                            preview.className = 'current-photo';
                            preview.alt = 'New profile photo preview';

                            const container = document.querySelector('.photo-preview-container') || document.createElement('div');
                            container.className = 'photo-preview-container';
                            container.innerHTML = '';
                            container.appendChild(preview);

                            const actions = document.createElement('div');
                            actions.className = 'photo-actions mt-3';
                            actions.innerHTML = `
                                <button type="button" class="btn btn-outline btn-sm" 
                                        onclick="document.getElementById('{{ form.photo.vars.id }}').click()">
                                    <i class="fas fa-sync-alt me-2"></i>Change Photo
                                </button>
                                
                            `;
                            container.appendChild(actions);

                            uploadArea.style.display = 'none';
                            uploadArea.parentNode.insertBefore(container, uploadArea.nextSibling);
                        }
                        reader.readAsDataURL(this.files[0]);
                    }
                });

                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.style.borderColor = 'var(--primary-color)';
                    uploadArea.style.backgroundColor = 'rgba(52, 152, 219, 0.1)';
                });

                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.style.borderColor = '#ccc';
                    uploadArea.style.backgroundColor = '';
                });

                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    photoInput.files = e.dataTransfer.files;
                    const event = new Event('change');
                    photoInput.dispatchEvent(event);
                });
            }
        });
    </script>
{% endblock %}
