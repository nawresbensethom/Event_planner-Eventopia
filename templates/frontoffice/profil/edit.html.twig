{% extends 'frontoffice/base.html.twig' %}

{% block title %}Edit Profile - {{ profil.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --warning-color: #ff9800;
            --danger-color: #f44336;
            --light-color: #f8f9fa;
            --accent-color: #fda085;
            --soft-pink: #fda085;
            --border-radius: 8px;
            --box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .profile-edit-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .page-title {
            color: var(--primary-color);
            font-weight: 600;
            margin: 0;
        }

        .form-card {
            padding: 1.5rem;
            background: var(--light-color);
            border-radius: var(--border-radius);
            margin-bottom: 2rem;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-outline {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: white;
        }

        .btn-outline:hover {
            background-color: rgba(67, 97, 238, 0.1);
        }

        .btn-warning {
            background-color: var(--primary-color);
            color: white;
            border: 1px solid var(--primary-color);
        }

        .btn-warning:hover {
            background-color: var(--secondary-color);
        }

        .btn-danger {
            background-color: var(--danger-color);
            color: white;
            border: 1px solid var(--danger-color);
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .photo-preview-container {
            margin: 1rem 0;
            text-align: center;
        }

        .current-photo {
            max-width: 200px;
            max-height: 200px;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .upload-area {
            border: 2px dashed #ccc;
            padding: 1.5rem;
            text-align: center;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: all 0.3s;
            margin: 1rem 0;
        }

        .upload-area:hover {
            border-color: var(--primary-color);
            background: rgba(67, 97, 238, 0.05);
        }

        .photo-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .form-actions {
                flex-direction: column-reverse;
                gap: 1rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .photo-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="profile-edit-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-user-edit me-2"></i>Modifier mon profil
            </h1>
        </div>

        <div class="form-card">
            {{ form_start(form, {'attr': {'class': 'profile-form'}}) }}

                <div class="mb-4">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.rating, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.rating, {'attr': {'class': 'form-control', 'min': 0, 'max': 5, 'step': 0.5}}) }}
                    {{ form_errors(form.rating) }}
                </div>

                <div class="mb-4">
                    <label class="form-label">Photo de profil</label>
                    {% if profil.photo %}
                        <div class="photo-preview-container">
                            <img src="{{ asset('uploads/photos/' ~ profil.photo) }}" 
                                 class="current-photo" 
                                 alt="Photo de profil actuelle">
                        </div>
                    {% endif %}

                    <div class="upload-area" id="uploadArea">
                        <i class="fas fa-cloud-upload-alt fa-3x mb-3 text-muted"></i>
                        <p class="mb-2">Glissez et déposez votre photo ici ou cliquez pour parcourir</p>
                        <small class="text-muted">(JPEG, PNG - Max 2MB)</small>
                        {{ form_widget(form.photo, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                    </div>
                    {{ form_errors(form.photo) }}
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('app_profil_show') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const uploadArea = document.getElementById('uploadArea');
            const photoInput = document.querySelector('input[type="file"]');

            uploadArea.addEventListener('click', function() {
                photoInput.click();
            });

            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = 'var(--primary-color)';
                uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.05)';
            });

            uploadArea.addEventListener('dragleave', function() {
                uploadArea.style.borderColor = '#ccc';
                uploadArea.style.backgroundColor = '';
            });

            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#ccc';
                uploadArea.style.backgroundColor = '';
                
                if (e.dataTransfer.files.length) {
                    photoInput.files = e.dataTransfer.files;
                    // Show preview if needed
                    const file = e.dataTransfer.files[0];
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const preview = document.querySelector('.current-photo');
                            if (preview) {
                                preview.src = e.target.result;
                            } else {
                                const newPreview = document.createElement('div');
                                newPreview.className = 'photo-preview-container';
                                newPreview.innerHTML = `
                                    <img src="${e.target.result}" class="current-photo" alt="Preview">
                                `;
                                uploadArea.parentNode.insertBefore(newPreview, uploadArea);
                            }
                        };
                        reader.readAsDataURL(file);
                    }
                }
            });

            photoInput.addEventListener('change', function(e) {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.querySelector('.current-photo');
                        if (preview) {
                            preview.src = e.target.result;
                        } else {
                            const newPreview = document.createElement('div');
                            newPreview.className = 'photo-preview-container';
                            newPreview.innerHTML = `
                                <img src="${e.target.result}" class="current-photo" alt="Preview">
                            `;
                            uploadArea.parentNode.insertBefore(newPreview, uploadArea);
                        }
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
{% endblock %}
